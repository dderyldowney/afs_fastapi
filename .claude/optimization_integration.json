{
  "project_wide_optimization": {
    "enabled": true,
    "version": "1.0.0",
    "integration_points": {
      "command_wrappers": [
        "bin/optimize-command",
        "bin/optimize-conversation"
      ],
      "automatic_optimization": {
        "git_commands": {
          "enabled": true,
          "optimization_level": "aggressive",
          "commands": ["status", "log", "diff", "show"]
        },
        "test_commands": {
          "enabled": true,
          "optimization_level": "standard",
          "commands": ["pytest", "unittest", "nose2"]
        },
        "status_commands": {
          "enabled": true,
          "optimization_level": "aggressive",
          "commands": ["strategic-status", "phase-status", "todo-status"]
        },
        "agricultural_commands": {
          "enabled": true,
          "optimization_level": "standard",
          "preserve_safety": true,
          "commands": ["equipment-status", "field-operations", "safety-check"]
        }
      }
    },
    "configuration": {
      "default_optimization_level": "adaptive",
      "token_budget_per_interaction": 2000,
      "agricultural_compliance_required": true,
      "safety_keyword_preservation": true,
      "performance_monitoring": true,
      "auto_export_sessions": true,
      "conversation_history_limit": 50
    },
    "integration_hooks": {
      "pre_command_hooks": [
        "agricultural_safety_check",
        "token_budget_validation"
      ],
      "post_command_hooks": [
        "optimization_metrics_tracking",
        "compliance_validation"
      ]
    },
    "monitoring": {
      "track_token_savings": true,
      "track_agricultural_compliance": true,
      "track_performance_metrics": true,
      "export_optimization_reports": true,
      "alert_on_compliance_violations": true
    }
  },
  "real_time_optimization": {
    "conversation_management": {
      "enabled": true,
      "auto_context_compression": true,
      "adaptive_optimization": true,
      "budget_enforcement": true
    },
    "agricultural_safety": {
      "keyword_preservation": [
        "emergency", "safety", "critical", "stop", "collision", "fault",
        "iso", "11783", "18497", "tractor", "equipment", "agricultural"
      ],
      "safety_critical_detection": true,
      "compliance_validation": true
    },
    "performance_optimization": {
      "context_window_size": 10,
      "history_compression_ratio": 0.3,
      "emergency_optimization_threshold": 0.8,
      "concurrent_processing_safe": true
    }
  },
  "integration_status": {
    "components_integrated": [
      "realtime_token_optimizer",
      "conversation_manager",
      "command_optimization_wrapper",
      "agricultural_compliance_system",
      "performance_monitoring"
    ],
    "test_coverage": {
      "functional_tests": 24,
      "functional_tests_passing": 24,
      "coverage_percentage": 100,
      "performance_tests_passing": true,
      "integration_tests_passing": true
    },
    "deployment_ready": true,
    "documentation_complete": true
  }
}