#!/usr/bin/env python3

import argparse
import sys
from pathlib import Path

# Add project root to sys.path
project_root = Path(__file__).resolve().parent.parent
sys.path.insert(0, str(project_root))

from afs_fastapi.core.todos_manager import reorder_tasks  # noqa: E402


def main():
    parser = argparse.ArgumentParser(description="Reorder a task.")
    parser.add_argument("task_id", type=str, help="The ID of the task to reorder.")
    parser.add_argument("new_position", type=int, help="The new position of the task.")
    args = parser.parse_args()

    success, error = reorder_tasks(args.task_id, args.new_position)

    if error:
        print(f"Error: {error}")
        sys.exit(1)
    
    if success:
        print(f"âœ“ Task ''{args.task_id}'' moved successfully to position {args.new_position}.")

if __name__ == "__main__":
    main()
