# type: ignore
#!/usr/bin/env python3
"""Complete a step and mark all its tasks as completed."""

import argparse
import sys
from pathlib import Path

# Add project root to sys.path
project_root = Path(__file__).resolve().parent.parent
sys.path.insert(0, str(project_root))

from afs_fastapi.core.todos_manager import complete_step  # noqa: E402


def main():
    parser = argparse.ArgumentParser(
        description="Complete a step and mark all its tasks as completed."
    )
    parser.add_argument("step_id", type=str, help="The ID of the step to complete.")
    args = parser.parse_args()

    completed_step, error = complete_step(args.step_id)

    if error:
        print(f"Error: {error}")
        sys.exit(1)

    if completed_step:
        print("âœ“ Step completed successfully!")
        print(f"  ID: {completed_step['id']}")
        print(f"  Name: {completed_step['name']}")
        print(f"  Status: {completed_step['status']}")
        print(f"  Completed: {completed_step['date_completed']}")
        print(f"  Tasks: {len(completed_step['tasks'])} (all marked completed)")
        print()
        print("Use './bin/step-status' to view all steps.")


if __name__ == "__main__":
    main()
