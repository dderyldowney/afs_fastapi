# type: ignore
#!/usr/bin/env python3

import argparse
import sys
from pathlib import Path

# Add project root to sys.path
project_root = Path(__file__).resolve().parent.parent
sys.path.insert(0, str(project_root))

from afs_fastapi.core.todos_manager import add_task_to_active_phase  # noqa: E402


def main():
    parser = argparse.ArgumentParser(description="Add a new task to the active phase.")
    parser.add_argument("description", type=str, help="The description of the task.")
    args = parser.parse_args()

    new_task, error = add_task_to_active_phase(args.description)

    if error:
        print(f"Error: {error}")
        sys.exit(1)
    
    if new_task:
        print("âœ“ Phase step added successfully!")
        print(f"  ID: {new_task['id']}")
        print(f"  Description: {new_task['description']}")
        print(f"  Status: {new_task['status']}")
        print()
        print("Use './bin/phase-status' to view all phase steps.")

if __name__ == "__main__":
    main()