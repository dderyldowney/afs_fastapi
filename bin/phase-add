#!/usr/bin/env python3
# type: ignore

import argparse
import sys
from pathlib import Path

# Add project root to sys.path
project_root = Path(__file__).resolve().parent.parent
sys.path.insert(0, str(project_root))

from afs_fastapi.todos.manager import add_phase  # noqa: E402


def main():
    parser = argparse.ArgumentParser(description="Add a new Phase to the ToDoWrite system.")
    parser.add_argument("title", type=str, help="The title of the phase.")
    parser.add_argument("--description", type=str, default="", help="The description of the phase.")
    parser.add_argument("--goal-id", type=str, required=True, help="The parent goal ID.")
    args = parser.parse_args()

    new_phase, error = add_phase(args.goal_id, args.title, args.description)

    if error:
        print(f"Error: {error}")
        sys.exit(1)

    if new_phase:
        print("âœ“ Phase added successfully!")
        print(f"  ID: {new_phase['id']}")
        print(f"  Title: {new_phase['title']}")
        print(f"  Status: {new_phase['status']}")
        print()
        print("Use './bin/phase-status' to view all phases.")


if __name__ == "__main__":
    main()
