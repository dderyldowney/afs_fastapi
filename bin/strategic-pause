# type: ignore
#!/usr/bin/env python3

import argparse
import sys
from pathlib import Path

# Add project root to sys.path
project_root = Path(__file__).resolve().parent.parent
sys.path.insert(0, str(project_root))

from afs_fastapi.core.todos_manager import pause_strategic_goal  # noqa: E402


def main():
    parser = argparse.ArgumentParser(description="Pause a strategic goal.")
    parser.add_argument("goal_id", type=str, help="The ID of the strategic goal to pause.")
    args = parser.parse_args()

    success, error = pause_strategic_goal(args.goal_id)

    if error:
        print(f"Error: {error}")
        sys.exit(1)
    
    if success:
        print(f"âœ“ Strategic goal ''{args.goal_id}'' paused successfully!")

if __name__ == "__main__":
    main()