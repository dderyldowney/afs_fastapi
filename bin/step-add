#!/usr/bin/env python3
# type: ignore
"""Add a new step to the active phase."""

import argparse
import sys
from pathlib import Path

# Add project root to sys.path
project_root = Path(__file__).resolve().parent.parent
sys.path.insert(0, str(project_root))

from todowrite.app import ToDoWrite  # noqa: E402
from todowrite.db.models import Node  # noqa: E402


def main():
    # Initialize ToDoWrite app instance
    app = ToDoWrite()
    parser = argparse.ArgumentParser(description="Add a new step to the active phase.")
    parser.add_argument("name", type=str, help="The name of the step.")
    args = parser.parse_args()

    todos_data = app.load_todos()
    active_items = app.get_active_items(todos_data)
    active_phase = active_items.get("Phase")

    if not active_phase:
        print(
            "Error: No active phase. Please activate a phase first using './bin/phase-activate <phase_id>'."
        )
        sys.exit(1)

    new_step, error = app.add_step(
        active_phase["id"], args.name, f"Implementation step for {args.name}"
    )

    if error:
        print(f"Error: {error}")
        sys.exit(1)

    if new_step:
        print("âœ“ Step added successfully!")
        print(f"  ID: {new_step['id']}")
        print(f"  Name: {new_step['title']}")
        print(f"  Status: {new_step['status']}")
        print()
        print("Use './bin/step-status' to view all steps.")
        print("Use './bin/step-activate <step_id>' to activate this step.")


if __name__ == "__main__":
    main()
