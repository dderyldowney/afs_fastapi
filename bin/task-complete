# type: ignore
#!/usr/bin/env python3

import argparse
import sys
from pathlib import Path

# Add project root to sys.path
project_root = Path(__file__).resolve().parent.parent
sys.path.insert(0, str(project_root))

from afs_fastapi.core.todos_manager import complete_task_in_active_phase  # noqa: E402


def main():
    parser = argparse.ArgumentParser(description="Mark a task in the active phase as complete.")
    parser.add_argument("search_term", type=str, help="The ID or description of the task to complete.")
    args = parser.parse_args()

    completed_task, error = complete_task_in_active_phase(args.search_term)

    if error:
        print(f"Error: {error}")
        sys.exit(1)
    
    if completed_task:
        print("âœ“ Task marked as completed!")
        print(f"  ID: {completed_task['id']}")
        print(f"  Description: {completed_task['description']}")
        print(f"  Completed at: {completed_task['date_completed']}")
        print()
        print("Use './bin/phase-status' to view updated phase progress.")

if __name__ == "__main__":
    main()