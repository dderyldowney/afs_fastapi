#!/usr/bin/env python3

import argparse
import sys
from pathlib import Path

# Add project root to sys.path
project_root = Path(__file__).resolve().parent.parent
sys.path.insert(0, str(project_root))

from afs_fastapi.core.todos_manager import reorder_phases  # noqa: E402


def main():
    parser = argparse.ArgumentParser(description="Reorder a phase.")
    parser.add_argument("phase_id", type=str, help="The ID of the phase to reorder.")
    parser.add_argument("new_position", type=int, help="The new position of the phase.")
    args = parser.parse_args()

    success, error = reorder_phases(args.phase_id, args.new_position)

    if error:
        print(f"Error: {error}")
        sys.exit(1)
    
    if success:
        print(f"âœ“ Phase ''{args.phase_id}'' moved successfully to position {args.new_position}.")

if __name__ == "__main__":
    main()
