#!/usr/bin/env python3
# type: ignore

import argparse
import sys
from pathlib import Path

# Add project root to sys.path
project_root = Path(__file__).resolve().parent.parent
sys.path.insert(0, str(project_root))

from todowrite.app import ToDoWrite  # noqa: E402
from todowrite.db.models import Node  # noqa: E402


def main():
    # Initialize ToDoWrite app instance
    app = ToDoWrite()
    parser = argparse.ArgumentParser(description="Resume a paused strategic goal.")
    parser.add_argument("goal_id", type=str, help="The ID of the strategic goal to resume.")
    args = parser.parse_args()

    goal = app.get_node_by_id(args.goal_id)

    if not goal:
        print(f"Error: Goal with ID '{args.goal_id}' not found.")
        sys.exit(1)

    if goal.status == "done":
        print(f"Error: Goal '{args.goal_id}' is already done and cannot be resumed.")
        sys.exit(1)
    if goal.status != "blocked":
        print(
            f"Error: Goal '{args.goal_id}' is not paused. Current status: {goal.status}."
        )
        sys.exit(1)

    updated_goal, error = app.update_node(args.goal_id, {"status": "planned"})

    if error:
        print(f"Error: {error}")
        sys.exit(1)

    print(f"âœ“ Goal '{args.goal_id}' resumed successfully!")


if __name__ == "__main__":
    main()
