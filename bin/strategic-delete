#!/usr/bin/env python3
# type: ignore

import argparse
import sys
from pathlib import Path

# Add project root to sys.path
project_root = Path(__file__).resolve().parent.parent
sys.path.insert(0, str(project_root))

from todowrite.app import ToDoWrite  # noqa: E402
from todowrite.db.models import Node  # noqa: E402


def main():
    # Initialize ToDoWrite app instance
    app = ToDoWrite()
    parser = argparse.ArgumentParser(description="Delete a strategic goal.")
    parser.add_argument("goal_id", type=str, help="The ID of the strategic goal to delete.")
    args = parser.parse_args()

    todos = app.load_todos()
    goals = todos["goals"]
    goal_found = False
    for i, goal in enumerate(goals):
        if goal["id"] == args.goal_id:
            goals.pop(i)
            goal_found = True
            break

    if not goal_found:
        print(f"Error: Goal with ID '{args.goal_id}' not found.")
        sys.exit(1)

    # DEPRECATED: save_todos(todos)  # TODO: Update to new API
    print(f"âœ“ Goal '{args.goal_id}' deleted successfully!")


if __name__ == "__main__":
    main()
