#!/bin/bash

# fulltest - Comprehensive Test Suite for AFS FastAPI
# Executes linting, type checking, and all tests.

set -e

# Colors for output
BLUE='\033[0;34m'
GREEN='\033[0;32m'
RED='\033[0;31m'
YELLOW='\033[1;33m'
BOLD='\033[1m'
NC='\033[0m' # No Color

echo -e "${BLUE}${BOLD}üöÄ Running Full Test Suite (Lint, Type Check, Tests)...${NC}"
echo -e "${BLUE}${BOLD}=======================================================${NC}"
echo

# Determine project root relative to this script for robust pathing
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
PROJECT_ROOT="$(cd "${SCRIPT_DIR}/.." && pwd)"

# Change to project root to ensure make finds Makefile correctly
cd "${PROJECT_ROOT}"

echo -e "${YELLOW}üìç Working Directory:${NC} ${PROJECT_ROOT}"
echo

# Execute the 'check' target from the Makefile
set +e # Allow make to fail and capture exit code
make check
FULLTEST_EXIT_CODE=$?
set -e

echo
echo -e "${BLUE}${BOLD}=======================================================${NC}"

if [ $FULLTEST_EXIT_CODE -eq 0 ]; then
    echo -e "${GREEN}${BOLD}‚úÖ Full Test Suite: ALL CHECKS PASSED${NC}"
    echo -e "${GREEN}System Health: OPTIMAL${NC}"
else
    echo -e "${RED}${BOLD}‚ùå Full Test Suite: FAILURES DETECTED${NC}"
    echo -e "${RED}System Health: REQUIRES IMMEDIATE ATTENTION${NC}"
    echo -e "${RED}Please review the output above for details on linting, type checking, or test failures.${NC}"
fi

echo

exit $FULLTEST_EXIT_CODE
