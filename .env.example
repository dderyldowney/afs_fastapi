# AFS FastAPI Environment Configuration Example
# Copy this file to .env and configure for your environment

# =============================================================================
# TodoWrite Database Configuration
# =============================================================================

# TodoWrite Database URL (highest preference)
# Use PostgreSQL for production agricultural robotics deployments
# TODOWRITE_DATABASE_URL=postgresql://username:password@localhost:5432/afs_todowrite

# General Database URL (fallback for TodoWrite)
# DATABASE_URL=postgresql://username:password@localhost:5432/afs_fastapi

# SQLite URL for TodoWrite (development/testing)
# TODOWRITE_SQLITE_URL=sqlite:///todowrite.db

# TodoWrite Storage Preference Override
# Options: AUTO, POSTGRESQL_ONLY, SQLITE_ONLY, YAML_ONLY
# TODOWRITE_STORAGE_PREFERENCE=AUTO

# =============================================================================
# AFS FastAPI Application Configuration
# =============================================================================

# API Server Configuration
AFS_API_HOST=127.0.0.1
AFS_API_PORT=8000
AFS_API_RELOAD=false
AFS_API_LOG_LEVEL=info

# CORS Configuration (comma-separated origins)
# AFS_CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# =============================================================================
# Database Configuration (Application Data)
# =============================================================================

# Main application database (agricultural data, CAN messages, etc.)
# DATABASE_URL=postgresql://username:password@localhost:5432/afs_fastapi

# Token Usage Tracking Database
# TOKEN_USAGE_DATABASE_URL=sqlite:///token_usage.db

# =============================================================================
# Agricultural Robotics Configuration
# =============================================================================

# CAN Bus Configuration
# CAN_INTERFACE=can0
# CAN_BITRATE=250000

# Equipment Configuration
# TRACTOR_COUNT=3
# FIELD_BOUNDARY_GPS_COORDS=lat1,lon1;lat2,lon2;lat3,lon3;lat4,lon4

# Safety Configuration
# EMERGENCY_STOP_TIMEOUT=5.0
# COLLISION_AVOIDANCE_DISTANCE=10.0

# =============================================================================
# Development and Testing
# =============================================================================

# Enable debug mode for development
# DEBUG=true

# Test database URLs (used by pytest)
# TEST_DATABASE_URL=sqlite:///test_afs_fastapi.db
# TEST_TODOWRITE_DATABASE_URL=sqlite:///test_todowrite.db
